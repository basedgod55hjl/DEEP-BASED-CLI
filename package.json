{
  "name": "@deepseek/cli",
  "version": "0.1.0",
  "description": "DeepSeek CLI - An AI-powered command-line tool for code analysis and generation",
  "engines": {
    "node": ">=20.0.0"
  },
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "deepseek": "dist/cli.js"
  },
  "scripts": {
    "dev": "tsx src/cli.ts",
    "build": "rimraf dist && tsc && chmod +x dist/cli.js",
    "start": "node dist/cli.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,md}\"",
    "typecheck": "tsc --noEmit",
    "prepare": "npm run build",
    "prepublishOnly": "npm run test && npm run lint && npm run build"
  },
  "keywords": [
    "deepseek",
    "ai",
    "cli",
    "code-analysis",
    "llm",
    "developer-tools"
  ],
  "author": "DeepSeek Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/deepseek-ai/deepseek-cli.git"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@inquirer/prompts": "^6.0.0",
    "axios": "^1.7.0",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "dotenv": "^16.4.0",
    "globby": "^14.0.0",
    "ignore": "^6.0.0",
    "ora": "^8.0.0",
    "marked": "^14.0.0",
    "marked-terminal": "^7.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.0.0",
    "prettier": "^3.5.0",
    "rimraf": "^6.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.5.0",
    "vitest": "^3.0.0"
  }
}
